<h1><%= @wall.name %></h1>
<div id="image"></div>
<div id="image-final">
  <% image_tag "#{@wall.photo}", class: "img"  %>
</div>


<h2 id="review_title">
  <%= render 'walls/review_title', reviews: @reviews %>
</h2>

<div class="auth auth-postion">
  <% if user_signed_in? %>
    <%= link_to "Pour signer le post click ici", new_user_session_path %>
  <% else %>
    <%= link_to "Pour signer le post click ici", user_registration_path %>
  <% end %>
</div>

<div id="reviews">
  <% if @reviews.blank? %>
    <div id="remove_noreview">
      Be the first to leave a review for <%= @wall.name %>
    </div>
  <% else %>
    <% @reviews.each do |review| %>
      <%= render 'reviews/show', review: review %>
    <% end %>
  <% end %>
</div>


<%= render 'reviews/form', wall: @wall, review: @review %>
